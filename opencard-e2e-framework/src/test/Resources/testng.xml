<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!--Specific suite you are running, to execute test we use maven + allure-->

<suite name="Login Suite">
    <!--In here we listed the test to execute they should have same name as the method in the respective class-->

        <test name="allow _user_to_do_login">
            <!--Tag parameter is used to handle these and just call them in the method-->

        <parameter name="browser" value="chrome"></parameter>

        <!--Groups are used to handle which test should be run and which not-->
           <groups>
                <run>
                    <include name="sucessTests"></include>
                    <exclude name="failTests"></exclude>
                </run>

            </groups>

        <!--List of classes used to execute testcases same name as class-->

            <classes>
                <class name="loginTest">
                    <methods>
                        <include name="allow_user_to_do_login"></include>
                    </methods>
                </class>
            </classes>

        </test>

